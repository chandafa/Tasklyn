{
  "entities": {
    "Task": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Task",
      "type": "object",
      "description": "Represents a task in the task management application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Task entity, automatically generated by Firestore."
        },
        "title": {
          "type": "string",
          "description": "Title of the task."
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the task."
        },
        "priority": {
          "type": "string",
          "description": "Priority level of the task (Low, Med, High).",
          "enum": [
            "Low",
            "Medium",
            "High"
          ]
        },
        "dueDate": {
          "type": "string",
          "description": "Due date for the task in ISO 8601 format.",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "description": "Creation date for the task in ISO 8601 format.",
          "format": "date-time"
        },
        "completedAt": {
          "type": "string",
          "description": "Completion date for the task in ISO 8601 format.",
          "format": "date-time"
        },
        "subtasks": {
          "type": "array",
          "description": "List of subtasks associated with the task.",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "text": {
                "type": "string"
              },
              "completed": {
                "type": "boolean"
              }
            },
            "required": [
              "id",
              "text",
              "completed"
            ]
          }
        },
        "progress": {
          "type": "number",
          "description": "Completion progress of the task (0-100%)."
        },
        "tagIds": {
          "type": "array",
          "description": "References to Tags. (Relationship: Task N:N Tag)",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "description": "Current status of the task (Pending, In Progress, Completed).",
          "enum": [
            "Pending",
            "In Progress",
            "Completed"
          ]
        },
        "reminders": {
          "type": "array",
          "description": "List of reminder triggers before the due date (e.g., 1 day, 3 days, 1 hour before).",
          "items": {
            "type": "string",
            "enum": [
              "1_day_before",
              "3_days_before",
              "1_hour_before"
            ]
          }
        },
        "orderRank": {
          "type": "number",
          "description": "A number used to determine the order of the task in the list."
        }
      },
      "required": [
        "title",
        "priority",
        "dueDate",
        "createdAt",
        "status"
      ]
    },
    "Tag": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Tag",
      "type": "object",
      "description": "Represents a tag or category associated with tasks.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Tag entity."
        },
        "name": {
          "type": "string",
          "description": "Name of the tag."
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Workspace": {
      "title": "Workspace",
      "type": "object",
      "description": "Represents a collaborative workspace for a team.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the workspace."
        },
        "description": {
          "type": "string",
          "description": "A brief description of the workspace."
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who owns the workspace."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the workspace was created."
        }
      },
      "required": [
        "name",
        "ownerId",
        "createdAt"
      ]
    },
    "Member": {
      "title": "Member",
      "type": "object",
      "description": "Represents a member of a workspace.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The UID of the user."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The email of the user."
        },
        "role": {
          "type": "string",
          "enum": [
            "owner",
            "member"
          ],
          "description": "The role of the member in the workspace."
        }
      },
      "required": [
        "userId",
        "email",
        "role"
      ]
    },
    "Invitation": {
      "title": "Invitation",
      "type": "object",
      "description": "Represents an invitation for a user to join a workspace.",
      "properties": {
        "workspaceId": {
          "type": "string",
          "description": "The ID of the workspace the user is invited to."
        },
        "workspaceName": {
          "type": "string",
          "description": "The name of the workspace."
        },
        "inviteeEmail": {
          "type": "string",
          "format": "email",
          "description": "The email of the user being invited."
        },
        "inviterEmail": {
          "type": "string",
          "format": "email",
          "description": "The email of the user who sent the invitation."
        },
        "status": {
          "type": "string",
          "enum": [
            "pending",
            "accepted",
            "declined"
          ],
          "description": "The status of the invitation."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the invitation was sent."
        }
      },
      "required": [
        "workspaceId",
        "workspaceName",
        "inviteeEmail",
        "inviterEmail",
        "status",
        "createdAt"
      ]
    },
    "TemplateTask": {
      "title": "TemplateTask",
      "type": "object",
      "description": "A simplified task definition for use within a Template.",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "priority": {
          "type": "string",
          "enum": ["Low", "Medium", "High"]
        }
      },
      "required": ["title", "priority"]
    },
    "Template": {
        "title": "Template",
        "type": "object",
        "description": "Represents a user-created task template.",
        "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" },
            "category": { "type": "string" },
            "authorId": { "type": "string" },
            "authorName": { "type": "string" },
            "published": { "type": "boolean" },
            "createdAt": { "type": "string", "format": "date-time" },
            "tasks": {
                "type": "array",
                "items": { "$ref": "#/entities/TemplateTask" }
            }
        },
        "required": ["title", "description", "category", "authorId", "authorName", "published", "createdAt", "tasks"]
    },
    "Note": {
      "title": "Note",
      "type": "object",
      "description": "Represents a quick note or memo for a user.",
      "properties": {
        "content": {
          "type": "string",
          "description": "The content of the note."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the note was created."
        }
      },
      "required": ["content", "createdAt"]
    },
     "Schedule": {
      "title": "Schedule",
      "type": "object",
      "description": "Represents a class or event in the user's weekly schedule.",
      "properties": {
        "courseName": {
          "type": "string",
          "description": "The name of the course or event."
        },
        "session": {
          "type": "string",
          "description": "The session number or topic."
        },
        "dayOfWeek": {
          "type": "string",
          "enum": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
          "description": "The day of the week for the schedule."
        },
        "timeStart": {
          "type": "string",
          "description": "The start time of the event (e.g., '08:50')."
        },
        "timeEnd": {
          "type": "string",
          "description": "The end time of the event (e.g., '10:30')."
        },
        "location": {
          "type": "string",
          "description": "The location of the event (e.g., 'Online', 'Room 404')."
        },
        "lecturer": {
          "type": "string",
          "description": "The name of the lecturer or host."
        }
      },
      "required": ["courseName", "session", "dayOfWeek", "timeStart", "timeEnd", "location"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": {
            "$ref": "#/backend/entities/Task"
          },
          "description": "Stores task data for each user. Path-based ownership ensures only the user {userId} can access tasks under this path."
        }
      },
      {
        "path": "/users/{userId}/tags/{tagId}",
        "definition": {
          "entityName": "Tag",
          "schema": {
            "$ref": "#/backend/entities/Tag"
          },
          "description": "Stores tag data for each user. Path-based ownership ensures only the user {userId} can access tags under this path."
        }
      },
      {
        "path": "/users/{userId}/notes/{noteId}",
        "definition": {
          "entityName": "Note",
          "schema": { "$ref": "#/entities/Note" },
          "description": "Stores quick notes for a user."
        }
      },
       {
        "path": "/users/{userId}/schedules/{scheduleId}",
        "definition": {
          "entityName": "Schedule",
          "schema": { "$ref": "#/entities/Schedule" },
          "description": "Stores weekly schedule entries for a user."
        }
      },
      {
        "path": "/workspaces/{workspaceId}",
        "definition": {
          "entityName": "Workspace",
          "schema": {
            "$ref": "#/backend/entities/Workspace"
          },
          "description": "Stores the core details for each collaborative workspace."
        }
      },
      {
        "path": "/workspaces/{workspaceId}/members/{memberId}",
        "definition": {
          "entityName": "Member",
          "schema": {
            "$ref": "#/backend/entities/Member"
          },
          "description": "Sub-collection storing members of a workspace. Access is controlled by workspace membership."
        }
      },
      {
        "path": "/workspaces/{workspaceId}/tasks/{taskId}",
        "definition": {
          "entityName": "Task",
          "schema": {
            "$ref": "#/backend/entities/Task"
          },
          "description": "Sub-collection for tasks shared within a specific workspace."
        }
      },
      {
        "path": "/invitations/{invitationId}",
        "definition": {
          "entityName": "Invitation",
          "schema": {
            "$ref": "#/backend/entities/Invitation"
          },
          "description": "Top-level collection for managing invitations to workspaces."
        }
      },
      {
        "path": "/members/{memberEntryId}",
        "definition": {
          "schema": {
            "type": "object",
            "properties": {
              "userId": {
                "type": "string"
              },
              "workspaceId": {
                "type": "string"
              }
            },
            "required": [
              "userId",
              "workspaceId"
            ]
          },
          "description": "A lookup collection to quickly find all workspaces a user belongs to, enabling efficient queries for a user's workspace list."
        }
      },
      {
          "path": "/templates/{templateId}",
          "definition": {
              "entityName": "Template",
              "schema": { "$ref": "#/entities/Template" },
              "description": "Stores user-created and community templates."
          }
      }
    ]
  }
}

    